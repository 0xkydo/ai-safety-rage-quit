generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum Company {
  OPENAI
  ANTHROPIC
  GOOGLE_DEEPMIND
}

enum DepartureStatus {
  CONFIRMED
  RUMORED
}

enum SubmissionStatus {
  PENDING
  APPROVED
  REJECTED
  DUPLICATE
}

model Submission {
  id                String           @id @default(cuid())
  // The tweet where someone tagged the bot
  mentionTweetId    String           @unique
  mentionAuthor     String
  mentionText       String?          @db.Text
  // The parent tweet (the resignation announcement)
  parentTweetId     String?
  parentTweetUrl    String?
  parentAuthor      String?
  parentAuthorName  String?
  parentText        String?          @db.Text
  parentLikes       Int              @default(0)
  parentRetweets    Int              @default(0)
  parentReplies     Int              @default(0)
  parentViews       Int              @default(0)
  // Processing state
  status            SubmissionStatus @default(PENDING)
  reviewNote        String?          @db.Text
  departureId       String?
  // Bot reply tracking
  botReplyTweetId   String?
  botReplied        Boolean          @default(false)
  createdAt         DateTime         @default(now())
  updatedAt         DateTime         @updatedAt

  @@index([status])
  @@index([parentTweetId])
}

// Track the last processed mention ID for pagination
model BotState {
  id                String   @id @default("singleton")
  lastMentionId     String?
  lastPollAt        DateTime?
  updatedAt         DateTime @updatedAt
}

model Departure {
  id              String          @id @default(cuid())
  personName      String
  role            String
  company         Company
  departureDate   DateTime
  summary         String          @db.Text
  profileImageUrl String?
  status          DepartureStatus @default(CONFIRMED)
  publicityScore  Float           @default(0)
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt
  tweets          Tweet[]
  newsArticles    NewsArticle[]

  @@index([company])
  @@index([departureDate])
  @@index([publicityScore])
}

model Tweet {
  id               String    @id @default(cuid())
  tweetId          String    @unique
  url              String
  text             String?   @db.Text
  likes            Int       @default(0)
  retweets         Int       @default(0)
  replies          Int       @default(0)
  views            Int       @default(0)
  metricsUpdatedAt DateTime?
  departureId      String
  departure        Departure @relation(fields: [departureId], references: [id], onDelete: Cascade)
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt

  @@index([departureId])
}

model NewsArticle {
  id          String    @id @default(cuid())
  url         String
  title       String
  source      String
  publishedAt DateTime?
  departureId String
  departure   Departure @relation(fields: [departureId], references: [id], onDelete: Cascade)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@index([departureId])
}
